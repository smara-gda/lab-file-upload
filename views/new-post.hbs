
<div id="form">
    <h2>Create post</h2>
    <form action="/create-post" method="POST">
        
        <label for="post">Your post</label>
        <textarea id="post" name="content" placeholder="Write anything" rows="8" cols="45"></textarea>

        <label for="file-name">Filename</label>
        <input type="text" id="file-name" name="picName" placeholder="File name">

        <label for="file">Select a file</label>
        <input type="file" id="file" name="picPath" accept="image/png, image/jpeg">
        
        <button type="submit">Submit post</button>
    </form>
</div>
